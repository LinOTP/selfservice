{
  "compileOnSave": false,
  "compilerOptions": {
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "target": "ES2022",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "module": "es2020",
    "baseUrl": "src/",
    "paths": {
      "@env/*": [
        "environments/*"
      ],
      "@app/*": [
        "app/*"
      ],
      "@api/*": [
        "app/api/*"
      ],
      "@common/*": [
        "app/common/*"
      ],
      "@testing/*": [
        "testing/*"
      ],
    },
    "useDefineForClassFields": false
  },
  "angularCompilerOptions": {
    "preserveWhitespaces": "off",
    "enableI18nLegacyMessageIdFormat": false
  }
}